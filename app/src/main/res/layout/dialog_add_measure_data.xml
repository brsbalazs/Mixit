<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
   >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Name of the consumed beverage"
        android:layout_gravity="center_horizontal"
        />

    <Spinner
        android:id="@+id/beverage_name_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scrollbarSize="@android:dimen/dialog_min_width_minor"
        android:spinnerMode="dialog"
        android:layout_marginBottom="25dp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Amount of the consumed beverage (ml)"
        android:layout_gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/amount_edit_text"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:inputType="number"
        android:layout_marginBottom="25dp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Minutes spent since finished with the beverage"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        />



        <NumberPicker
            android:id="@+id/minutes_spent_numberpicker"
            android:layout_height="120dp"
            android:layout_width="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            />


</LinearLayout>